<UserControl x:Class="AliNedvizhimostApp.Views.PropertiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F0F2F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Filter Panel -->
        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="5" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Фильтры" Style="{StaticResource Text.H2}" Margin="0,0,0,15"/>

                    <TextBlock Text="Поиск" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox Style="{StaticResource WatermarkTextBoxStyle}" Tag="Ключевые слова..." Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Цена" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource WatermarkTextBoxStyle}" Tag="От" Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="1" Style="{StaticResource WatermarkTextBoxStyle}" Tag="До" Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Площадь (м²)" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource WatermarkTextBoxStyle}" Tag="От" Text="{Binding MinArea, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="1" Style="{StaticResource WatermarkTextBoxStyle}" Tag="До" Text="{Binding MaxArea, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Комнат (от)" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBox Style="{StaticResource WatermarkTextBoxStyle}" Tag="0" Text="{Binding MinRooms, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Сортировка" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" VerticalContentAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Properties List Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Все объявления" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="Добавить объявление" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding DataContext.GoToAddPropertyCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </Grid>

            <!-- Properties List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding Properties}" Background="Transparent" BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="10,0,10,15"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="5" Padding="15">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.SelectPropertyCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="5"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" Grid.Row="0"/>
                                    <TextBlock Text="{Binding Address}" FontSize="14" Foreground="Gray" Grid.Row="1" Margin="0,5,0,0"/>

                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                                        <TextBlock Text="{Binding Price, StringFormat='C', ConverterCulture='ru-RU'}" FontWeight="SemiBold" FontSize="16" Foreground="#007ACC"/>
                                        <TextBlock Text=" | " Margin="10,0"/>
                                        <TextBlock Text="{Binding Area, StringFormat='{}{0} м²'}" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text=" | " Margin="10,0"/>
                                        <TextBlock Text="{Binding Rooms, StringFormat='{}{0} комн.'}" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Description}" Grid.Row="3" TextWrapping="Wrap" Margin="0,10,0,0" Foreground="Gray" MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
