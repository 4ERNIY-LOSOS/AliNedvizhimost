<Application x:Class="AliNedvizhimostApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AliNedvizhimostApp"
             xmlns:viewmodels="clr-namespace:AliNedvizhimostApp.ViewModels"
             xmlns:views="clr-namespace:AliNedvizhimostApp.Views"
             xmlns:converters="clr-namespace:AliNedvizhimostApp.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Layout.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:SenderToBackgroundConverter x:Key="SenderToBackgroundConverter"/>

            <DataTemplate DataType="{x:Type viewmodels:LoginRegisterViewModel}">
                <views:LoginRegisterView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:PropertiesViewModel}">
                <views:PropertiesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:PropertyDetailsViewModel}">
                <views:PropertyDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:AddEditPropertyViewModel}">
                <views:AddEditPropertyView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ProfileViewModel}">
                <views:ProfileView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:AdminViewModel}">
                <views:AdminView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:AddEditUserViewModel}">
                <views:AddEditUserView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:SendMessageViewModel}">
                <views:SendMessageView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ConversationsViewModel}">
                <views:ConversationsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ChatViewModel}">
                <views:ChatView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>